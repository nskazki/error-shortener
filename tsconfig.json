{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "listFiles": true,
    "outDir": "build",
    "newLine": "LF",
    "sourceMap": true,
    "declaration": true,
    "removeComments": false,
    "noLib": false,
    "noImplicitAny": true,
    "isolatedModules": false,
    "preserveConstEnums": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "suppressImplicitAnyIndexErrors": false
  },
  "files": [
    "src/index.ts",
    "test/index.test.ts",
    "typings/main.d.ts"
  ]
}
